---
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";

export const prerender = true;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="WRP Dubai - Premium car detailing studio. Wrap, Reinforce, Protect. Expert ceramic coating, PPF, and luxury car care." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>WRP Dubai - Premium Car Detailing | Ceramic Coating & PPF Specialists</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <!-- Navigation -->
      <nav
        x-data="{ mobileMenuOpen: false }"
        class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-md border-b border-border"
      >
        <div class="container mx-auto px-6 py-4 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <span class="font-logo text-4xl tracking-tight font-black italic">WRP.</span>
          </div>
          <div class="hidden md:flex items-center gap-8 text-sm tracking-wide">
            <a href="#services" class="hover:text-muted-foreground transition-colors">SERVICES</a>
            <a href="#portfolio" class="hover:text-muted-foreground transition-colors">PORTFOLIO</a>
            <a href="#about" class="hover:text-muted-foreground transition-colors">ABOUT</a>
            <a href="#contact" class="hover:text-muted-foreground transition-colors">CONTACT</a>
          </div>
          <Button className="hidden md:flex">BOOK APPOINTMENT</Button>
          <button
            class="md:hidden z-50"
            @click="mobileMenuOpen = !mobileMenuOpen"
            aria-label="Toggle menu"
          >
            <svg x-show="!mobileMenuOpen" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg x-show="mobileMenuOpen" x-cloak class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Menu -->
        <div
          x-show="mobileMenuOpen"
          x-cloak
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="max-h-0 opacity-0"
          x-transition:enter-end="max-h-screen opacity-100"
          x-transition:leave="transition ease-in duration-300"
          x-transition:leave-start="max-h-screen opacity-100"
          x-transition:leave-end="max-h-0 opacity-0"
          class="md:hidden absolute top-full left-0 right-0 bg-background border-b border-border overflow-hidden"
        >
          <div class="container mx-auto px-6 py-6 flex flex-col gap-6">
            <a href="#services" class="text-lg tracking-wide hover:text-muted-foreground transition-colors" @click="mobileMenuOpen = false">SERVICES</a>
            <a href="#portfolio" class="text-lg tracking-wide hover:text-muted-foreground transition-colors" @click="mobileMenuOpen = false">PORTFOLIO</a>
            <a href="#about" class="text-lg tracking-wide hover:text-muted-foreground transition-colors" @click="mobileMenuOpen = false">ABOUT</a>
            <a href="#contact" class="text-lg tracking-wide hover:text-muted-foreground transition-colors" @click="mobileMenuOpen = false">CONTACT</a>
            <Button className="w-full" @click="mobileMenuOpen = false">BOOK APPOINTMENT</Button>
          </div>
        </div>
      </nav>

      <!-- Hero Section -->
      <section class="relative h-screen flex items-center justify-center overflow-hidden">
        <div class="absolute inset-0 bg-black">
          <img
            src="/luxury-supercar-close-up-detail-black-and-white.jpg"
            alt="Luxury Vehicle Detail"
            class="w-full h-full object-cover opacity-40"
          />
        </div>
        <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
          <h1 class="font-serif text-6xl md:text-8xl lg:text-9xl font-bold mb-6 text-white tracking-tight">
            Precision<br />Redefined
          </h1>
          <p class="text-lg md:text-xl text-white/90 mb-8 max-w-2xl mx-auto tracking-wide leading-relaxed">
            Dubai's most exclusive automotive care studio. Where craftsmanship meets perfection.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button size="lg" className="bg-white text-black hover:bg-white/90 text-base tracking-wide">
              BOOK CONSULTATION
              <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </Button>
            <Button size="lg" variant="outline" className="border-white text-white hover:bg-white hover:text-black text-base tracking-wide bg-transparent">
              VIEW PORTFOLIO
            </Button>
          </div>
        </div>
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
          <svg class="h-8 w-8 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </div>
      </section>

      <!-- To be continued in next message due to length -->
    </div>
  </body>
</html>
