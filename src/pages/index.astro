---
export const prerender = true;

import { Image } from 'astro:assets';
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
import { SEO } from 'astro-seo';
import Schema from '../components/Schema.astro';
import GridPattern from '../components/GridPattern.astro';
import ShimmerButton from '../components/ShimmerButton.astro';
import CircularText from '../components/CircularText.astro';
import { ClientRouter } from 'astro:transitions';
import { Icon } from 'astro-icon/components';
import '../styles/global.css';

const title = 'WRP. | Premium Car Detailing Studio Dubai';
const description = "Dubai's most exclusive automotive care studio. Wrap, Reinforce, Protect your luxury vehicle with precision craftsmanship.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const ogImageURL = new URL('/og-image.jpg', Astro.site).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: ogImageURL,
          url: canonicalURL,
        },
        optional: {
          description: description,
          siteName: 'WRP Dubai',
          locale: 'en_AE',
        },
        image: {
          alt: 'WRP Premium Car Detailing Dubai',
          width: 1200,
          height: 630,
          type: 'image/png',
        },
      }}
      twitter={{
        card: 'summary_large_image',
        site: '@wrp_ae',
        creator: '@wrp_ae',
        title: title,
        description: description,
        image: ogImageURL,
        imageAlt: 'WRP Premium Car Detailing Dubai',
      }}
      extend={{
        link: [
          { rel: 'icon', type: 'image/svg+xml', href: '/favicon.svg' },
          { rel: 'icon', type: 'image/x-icon', href: '/favicon.ico' },
          { rel: 'icon', type: 'image/png', sizes: '96x96', href: '/favicon-96x96.png' },
          { rel: 'apple-touch-icon', sizes: '180x180', href: '/apple-touch-icon.png' },
          { rel: 'manifest', href: '/site.webmanifest' },
        ],
        meta: [
          { name: 'viewport', content: 'width=device-width, initial-scale=1.0' },
          { name: 'theme-color', content: '#000000' },
        ],
      }}
    />

    <Schema />
    <Schema type="WebSite" />

    <!-- View Transitions Fallback for browsers without native support -->
    <ClientRouter />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Inter:wght@400;500;600;700&family=Montserrat:ital,wght@1,900&display=swap" rel="stylesheet" />

    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <style>
      [x-cloak] {
        display: none !important;
      }
    </style>
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <!-- Navigation -->
      <nav
        x-data="{ mobileMenuOpen: false }"
        class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-md border-b border-border"
      >
        <div class="container mx-auto px-6 py-4 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <a href="/" class="flex items-center">
              <img src="/wrp-logo.svg" alt="WRP Logo" class="h-10 w-auto" loading="lazy">
            </a>
          </div>
          <div class="hidden md:flex items-center gap-8 text-sm tracking-wide">
            <!-- Services Dropdown - Fixed hover behavior -->
            <div class="relative">
              <div x-data="{ open: false }" @mouseenter="open = true" @mouseleave="open = false">
                <button
                  class="hover:text-muted-foreground transition-colors flex items-center gap-1"
                  @click="open = !open"
                >
                  SERVICES
                  <Icon name="lucide:chevron-down" class="h-4 w-4" />
                </button>
                <div
                  x-show="open"
                  x-cloak
                  x-transition
                  class="absolute top-full left-0 mt-2 w-64 bg-background border border-border shadow-lg py-2"
                >
                  <a href="/services/ceramic-coating" class="block px-4 py-3 hover:bg-muted transition-colors text-sm">
                    Ceramic Coating
                  </a>
                  <a href="/services/paint-protection-film" class="block px-4 py-3 hover:bg-muted transition-colors text-sm">
                    Paint Protection Film
                  </a>
                  <a href="/services/polish" class="block px-4 py-3 hover:bg-muted transition-colors text-sm">
                    Paint Correction & Polish
                  </a>
                  <a href="/services/window-film" class="block px-4 py-3 hover:bg-muted transition-colors text-sm">
                    Window Film
                  </a>
                  <a href="/services/premium-car-wash" class="block px-4 py-3 hover:bg-muted transition-colors text-sm">
                    Premium Car Wash
                  </a>
                </div>
              </div>
            </div>
            <a href="/portfolio" class="hover:text-muted-foreground transition-colors">
              PORTFOLIO
            </a>
            <a href="/more-about-wrp" class="hover:text-muted-foreground transition-colors">
              ABOUT
            </a>
            <a href="/contact-us" class="hover:text-muted-foreground transition-colors">
              CONTACT
            </a>
          </div>
          <ShimmerButton href="/contact-us" className="hidden md:flex">
            BOOK APPOINTMENT
          </ShimmerButton>
          <button
            class="md:hidden z-50"
            @click="mobileMenuOpen = !mobileMenuOpen"
            aria-label="Toggle menu"
          >
            <Icon name="lucide:menu" class="h-6 w-6" x-show="!mobileMenuOpen" />
            <Icon name="lucide:x" class="h-6 w-6" x-show="mobileMenuOpen" x-cloak />
          </button>
        </div>

        <div
          x-show="mobileMenuOpen"
          x-cloak
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="opacity-0 max-h-0"
          x-transition:enter-end="opacity-100 max-h-screen"
          x-transition:leave="transition ease-in duration-200"
          x-transition:leave-start="opacity-100 max-h-screen"
          x-transition:leave-end="opacity-0 max-h-0"
          class="md:hidden absolute top-full left-0 right-0 bg-background border-b border-border overflow-hidden"
        >
          <div class="container mx-auto px-6 py-6 flex flex-col gap-6">
            <!-- Services Section -->
            <div class="text-xs text-muted-foreground uppercase tracking-wider mb-2">Services</div>
            <div class="ml-4 flex flex-col gap-4">
              <a href="/services/ceramic-coating" class="text-base hover:text-muted-foreground transition-colors" @click="mobileMenuOpen = false">
                Ceramic Coating
              </a>
              <a href="/services/paint-protection-film" class="text-base hover:text-muted-foreground transition-colors" @click="mobileMenuOpen = false">
                Paint Protection Film
              </a>
              <a href="/services/polish" class="text-base hover:text-muted-foreground transition-colors" @click="mobileMenuOpen = false">
                Paint Correction & Polish
              </a>
              <a href="/services/window-film" class="text-base hover:text-muted-foreground transition-colors" @click="mobileMenuOpen = false">
                Window Film
              </a>
              <a href="/services/premium-car-wash" class="text-base hover:text-muted-foreground transition-colors" @click="mobileMenuOpen = false">
                Premium Car Wash
              </a>
            </div>

            <div class="border-t border-border pt-4"></div>

            <a
              href="#portfolio"
              class="text-lg tracking-wide hover:text-muted-foreground transition-colors"
              @click="mobileMenuOpen = false"
            >
              PORTFOLIO
            </a>
            <a
              href="/more-about-wrp"
              class="text-lg tracking-wide hover:text-muted-foreground transition-colors"
              @click="mobileMenuOpen = false"
            >
              ABOUT
            </a>
            <a
              href="/contact-us"
              class="text-lg tracking-wide hover:text-muted-foreground transition-colors"
              @click="mobileMenuOpen = false"
            >
              CONTACT
            </a>
            <Button className="w-full" @click="mobileMenuOpen = false">
              <a href="/contact-us" class="w-full">BOOK APPOINTMENT</a>
            </Button>
          </div>
        </div>
      </nav>

      <!-- Hero Section -->
      <section class="relative h-screen flex items-center justify-center overflow-hidden">
        <div class="absolute inset-0 bg-black" id="hero-bg">
          <img
            src="/luxury-supercar-close-up-detail-black-and-white.jpg"
            alt="Luxury supercar receiving premium ceramic coating and paint protection at WRP Dubai detailing studio"
            width="1920"
            height="1080"
            class="w-full h-full object-cover opacity-40"
            id="hero-image"
            loading="eager"
          />
        </div>
        <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
          <h1 class="font-serif text-6xl md:text-8xl lg:text-9xl font-bold mb-6 text-white tracking-tight">
            Precision
            <br />
            Redefined
          </h1>
          <p class="text-lg md:text-xl text-white/90 mb-8 max-w-2xl mx-auto tracking-wide leading-relaxed">
            Dubai's most exclusive automotive care studio. Where craftsmanship meets perfection.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact-us">
              <Button size="lg" className="bg-white text-black hover:bg-white/90 text-base tracking-wide">
                BOOK CONSULTATION
                <Icon name="lucide:arrow-right" class="ml-2 h-5 w-5" />
              </Button>
            </a>
            <a href="/portfolio">
              <Button
                size="lg"
                variant="outline"
                className="border-white text-white hover:bg-white hover:text-black text-base tracking-wide bg-transparent"
              >
                VIEW PORTFOLIO
              </Button>
            </a>
          </div>
        </div>
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
          <Icon name="lucide:chevron-down" class="h-8 w-8 text-white/60" />
        </div>
      </section>

      <!-- Philosophy Section -->
      <section class="py-32 px-6">
        <div class="container mx-auto max-w-6xl">
          <div class="grid md:grid-cols-2 gap-16 items-center">
            <div>
              <h2 class="font-serif text-5xl md:text-6xl font-bold mb-6 leading-tight">
                Automotive
                <br />
                Excellence
              </h2>
              <p class="text-lg text-muted-foreground leading-relaxed mb-6">
                At WRP., we don't just detail vehicles—we elevate them to works of art. Every surface, every curve,
                every detail receives the meticulous attention it deserves.
              </p>
              <p class="text-lg text-muted-foreground leading-relaxed">
                Our studio in the heart of Dubai serves the region's most discerning automotive enthusiasts, offering
                bespoke protection and enhancement services that set new standards in luxury vehicle care. <a href="/more-about-wrp" class="text-foreground font-medium hover:underline underline-offset-4 transition-all">Discover our story</a> and the passion that drives every detail.
              </p>
            </div>
            <div class="relative h-[600px]">
              <img
                src="/luxury-car-detailing-studio-interior-minimal-black.jpg"
                alt="WRP Dubai premium car detailing studio interior with professional equipment and climate-controlled environment"
                width="1200"
                height="800"
                class="w-full h-full object-cover"
              />
              <!-- Circular Rotating Text Badge - DISABLED: causes horizontal overflow on mobile
              <div class="absolute -top-16 -right-16 text-black z-10">
                <CircularText text="WRP DUBAI • LUXURY DETAILING • " size={0.8} />
              </div>
              -->
            </div>
          </div>
        </div>
      </section>

      <!-- Services Section -->
      <section id="services" class="py-32 px-6 bg-muted/30">
        <div class="container mx-auto max-w-7xl">
          <div class="text-center mb-20">
            <h2 class="font-serif text-5xl md:text-6xl font-bold mb-6">The WRP Philosophy</h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
              Three pillars of automotive excellence: Wrap, Reinforce, Protect
            </p>
          </div>

          <div class="grid md:grid-cols-3 gap-8">
            <Card className="p-8 hover:shadow-2xl transition-shadow duration-300 border-2">
              <div class="mb-6">
                <div class="w-16 h-16 bg-primary text-primary-foreground flex items-center justify-center text-2xl font-bold mb-4">
                  W
                </div>
                <h3 class="font-serif text-3xl font-bold mb-3">Wrap</h3>
                <p class="text-muted-foreground leading-relaxed">
                  Premium vinyl wrapping and color transformation. From subtle elegance to bold statements, we bring
                  your vision to life with precision application.
                </p>
              </div>
              <ul class="space-y-2 text-sm mb-6">
                <li class="flex items-start gap-2">
                  <Icon name="lucide:check" class="h-4 w-4 text-primary mt-1 flex-shrink-0" />
                  <span>Full vehicle color change</span>
                </li>
                <li class="flex items-start gap-2">
                  <Icon name="lucide:check" class="h-4 w-4 text-primary mt-1 flex-shrink-0" />
                  <span>Custom design wraps</span>
                </li>
                <li class="flex items-start gap-2">
                  <Icon name="lucide:check" class="h-4 w-4 text-primary mt-1 flex-shrink-0" />
                  <span>Chrome delete & accents</span>
                </li>
              </ul>
              <Button variant="outline" className="w-full bg-transparent">
                <a href="/wrap">LEARN MORE</a>
              </Button>
            </Card>

            <Card className="p-8 hover:shadow-2xl transition-shadow duration-300 border-2">
              <div class="mb-6">
                <div class="w-16 h-16 bg-primary text-primary-foreground flex items-center justify-center text-2xl font-bold mb-4">
                  R
                </div>
                <h3 class="font-serif text-3xl font-bold mb-3">Reinforce</h3>
                <p class="text-muted-foreground leading-relaxed">
                  Advanced paint protection film and ceramic coating systems. Military-grade protection that preserves
                  your investment for years to come.
                </p>
              </div>
              <ul class="space-y-2 text-sm mb-6">
                <li class="flex items-start gap-2">
                  <Icon name="lucide:check" class="h-4 w-4 text-primary mt-1 flex-shrink-0" />
                  <span>Paint protection film (PPF)</span>
                </li>
                <li class="flex items-start gap-2">
                  <Icon name="lucide:check" class="h-4 w-4 text-primary mt-1 flex-shrink-0" />
                  <span>Ceramic coating systems</span>
                </li>
                <li class="flex items-start gap-2">
                  <Icon name="lucide:check" class="h-4 w-4 text-primary mt-1 flex-shrink-0" />
                  <span>Nano-technology treatments</span>
                </li>
              </ul>
              <Button variant="outline" className="w-full bg-transparent">
                <a href="/reinforce">LEARN MORE</a>
              </Button>
            </Card>

            <Card className="p-8 hover:shadow-2xl transition-shadow duration-300 border-2">
              <div class="mb-6">
                <div class="w-16 h-16 bg-primary text-primary-foreground flex items-center justify-center text-2xl font-bold mb-4">
                  P
                </div>
                <h3 class="font-serif text-3xl font-bold mb-3">Protect</h3>
                <p class="text-muted-foreground leading-relaxed">
                  Comprehensive detailing and maintenance programs. Meticulous care that maintains showroom perfection,
                  inside and out.
                </p>
              </div>
              <ul class="space-y-2 text-sm mb-6">
                <li class="flex items-start gap-2">
                  <Icon name="lucide:check" class="h-4 w-4 text-primary mt-1 flex-shrink-0" />
                  <span>Exterior & interior detailing</span>
                </li>
                <li class="flex items-start gap-2">
                  <Icon name="lucide:check" class="h-4 w-4 text-primary mt-1 flex-shrink-0" />
                  <span>Paint correction & polishing</span>
                </li>
                <li class="flex items-start gap-2">
                  <Icon name="lucide:check" class="h-4 w-4 text-primary mt-1 flex-shrink-0" />
                  <span>Maintenance programs</span>
                </li>
              </ul>
              <Button variant="outline" className="w-full bg-transparent">
                <a href="/protect">LEARN MORE</a>
              </Button>
            </Card>
          </div>
        </div>
      </section>

      <!-- Our Services Section -->
      <section class="py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center mb-20">
            <h2 class="font-serif text-4xl md:text-5xl font-bold mb-4">Our Services</h2>
            <p class="text-lg text-muted-foreground">
              Premium automotive care solutions for Dubai's luxury vehicles
            </p>
          </div>

          <!-- Service 1: Ceramic Coating - Photo RIGHT -->
          <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2 mb-24">
            <div class="lg:pt-4 lg:pr-8">
              <div class="lg:max-w-lg">
                <h3 class="font-serif text-3xl md:text-4xl font-bold mb-4">Ceramic Coating</h3>
                <p class="text-lg text-muted-foreground mb-8">
                  Nano-ceramic technology that creates a permanent hydrophobic shield. Delivers unmatched gloss, chemical resistance, and UV protection for years.
                </p>
                <dl class="space-y-6 text-base text-muted-foreground">
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-foreground">
                      <Icon name="lucide:shield" class="absolute top-1 left-1 h-5 w-5" />
                      9H Hardness Protection.
                    </dt>
                    <dd class="inline">Scratch and swirl resistance with nano-ceramic shield technology</dd>
                  </div>
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-foreground">
                      <Icon name="lucide:droplets" class="absolute top-1 left-1 h-5 w-5" />
                      Hydrophobic Properties.
                    </dt>
                    <dd class="inline">Water beads and rolls off instantly, making washing effortless</dd>
                  </div>
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-foreground">
                      <Icon name="lucide:clock" class="absolute top-1 left-1 h-5 w-5" />
                      2-7 Year Warranty.
                    </dt>
                    <dd class="inline">Long-lasting protection engineered for Dubai's extreme climate</dd>
                  </div>
                </dl>
                <div class="mt-8">
                  <a href="/services/ceramic-coating">
                    <Button size="lg">
                      EXPLORE SERVICE
                      <Icon name="lucide:arrow-right" class="ml-2 h-5 w-5" />
                    </Button>
                  </a>
                  
                </div>
              </div>
            </div>
            <div class="overflow-hidden">
              <img
                src="/portfolio/team-detailing-black-lexus-hood.webp"
                alt="WRP Dubai technician applying professional ceramic coating on Lexus luxury vehicle hood"
                width="1200"
                height="800"
                class="w-full h-auto object-cover transition-transform duration-500 hover:scale-105"
              />
            </div>
          </div>

          <!-- Service 2: Paint Protection Film - Photo LEFT -->
          <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2 mb-24 bg-muted/30 p-12">
            <div class="flex items-start justify-end lg:order-first overflow-hidden">
              <img
                src="/portfolio/porsche-boxster-spyder-gray.webp"
                alt="Porsche Boxster Spyder with paint protection film installation at WRP Dubai showroom"
                width="1200"
                height="800"
                class="w-full h-auto object-cover transition-transform duration-500 hover:scale-105"
              />
            </div>
            <div class="lg:ml-auto lg:pt-4 lg:pl-8">
              <div class="lg:max-w-lg">
                <h3 class="font-serif text-3xl md:text-4xl font-bold mb-4">Paint Protection Film</h3>
                <p class="text-lg text-muted-foreground mb-8">
                  Military-grade transparent film that shields your paint from rock chips, scratches, and environmental damage. Self-healing technology repairs minor scratches.
                </p>
                <dl class="space-y-6 text-base text-muted-foreground">
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-foreground">
                      <Icon name="lucide:shield-check" class="absolute top-1 left-1 h-5 w-5" />
                      Impact Protection.
                    </dt>
                    <dd class="inline">Guards against rock chips, road debris, and minor collisions</dd>
                  </div>
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-foreground">
                      <Icon name="lucide:rotate-cw" class="absolute top-1 left-1 h-5 w-5" />
                      Self-Healing Technology.
                    </dt>
                    <dd class="inline">Minor scratches disappear with heat exposure from sun or water</dd>
                  </div>
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-foreground">
                      <Icon name="lucide:sun" class="absolute top-1 left-1 h-5 w-5" />
                      UV Resistance.
                    </dt>
                    <dd class="inline">Prevents paint fading and oxidation from Dubai's intense sunlight</dd>
                  </div>
                </dl>
                <div class="mt-8">
                  <a href="/services/paint-protection-film">
                    <Button size="lg">
                      EXPLORE SERVICE
                      <Icon name="lucide:arrow-right" class="ml-2 h-5 w-5" />
                    </Button>
                  </a>
                  
                </div>
              </div>
            </div>
          </div>

          <!-- Service 3: Paint Correction - Photo RIGHT with Testimonial -->
          <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:items-start mb-24">
            <div class="lg:pt-4 lg:pr-8">
              <div class="lg:max-w-lg">
                <h3 class="font-serif text-3xl md:text-4xl font-bold mb-4">Paint Correction & Polish</h3>
                <p class="text-lg text-muted-foreground mb-8">
                  Multi-stage machine polishing that removes swirl marks, scratches, and oxidation. Restore your paint's original depth and mirror-like clarity.
                </p>
                <dl class="space-y-6 text-base text-muted-foreground">
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-foreground">
                      <Icon name="lucide:sparkles" class="absolute top-1 left-1 h-5 w-5" />
                      Mirror Finish.
                    </dt>
                    <dd class="inline">Deep, reflective gloss that makes paint look better than new</dd>
                  </div>
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-foreground">
                      <Icon name="lucide:eraser" class="absolute top-1 left-1 h-5 w-5" />
                      Defect Removal.
                    </dt>
                    <dd class="inline">Eliminates 85-95% of swirls, scratches, and water spots</dd>
                  </div>
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-foreground">
                      <Icon name="lucide:gauge" class="absolute top-1 left-1 h-5 w-5" />
                      Paint Depth Measurement.
                    </dt>
                    <dd class="inline">Safe correction using precision gauges and professional compounds</dd>
                  </div>
                </dl>
                <div class="mt-8">
                  <a href="/services/polish">
                    <Button size="lg">
                      EXPLORE SERVICE
                      <Icon name="lucide:arrow-right" class="ml-2 h-5 w-5" />
                    </Button>
                  </a>
                  
                </div>
                <figure class="mt-12 border-l-2 border-border pl-8">
                  <blockquote class="text-base text-muted-foreground italic">
                    <p>"Exceptional attention to detail. My Porsche 911 GT3 RS has never looked better. The ceramic coating is flawless."</p>
                  </blockquote>
                  <figcaption class="mt-4 flex gap-x-4 text-sm">
                    <div><span class="font-semibold">Ahmed Al-Maktoum</span> – <span class="text-muted-foreground">Porsche 911 GT3 RS Owner</span></div>
                  </figcaption>
                </figure>
              </div>
            </div>
            <div class="overflow-hidden">
              <img
                src="/portfolio/green-porsche-911-showroom-event.webp"
                alt="Green Porsche 911 showcasing mirror-finish paint correction and ceramic coating at WRP Dubai"
                width="1200"
                height="800"
                class="w-full h-auto object-cover transition-transform duration-500 hover:scale-105"
              />
            </div>
