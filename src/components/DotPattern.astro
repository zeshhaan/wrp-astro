---
interface Props {
  className?: string;
  dotSize?: number;
  dotSpacing?: number;
  opacity?: number;
}

const {
  className = '',
  dotSize = 1,
  dotSpacing = 16,
  opacity = 0.3,
} = Astro.props;
---

<svg
  class={`absolute inset-0 h-full w-full ${className}`}
  aria-hidden="true"
>
  <defs>
    <pattern
      id="dot-pattern"
      x="0"
      y="0"
      width={dotSpacing}
      height={dotSpacing}
      patternUnits="userSpaceOnUse"
    >
      <circle
        cx={dotSize}
        cy={dotSize}
        r={dotSize}
        fill="currentColor"
        opacity={opacity}
      />
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#dot-pattern)" />
</svg>
