---
import BaseLayout from './BaseLayout.astro';
import { Button } from "@/components/ui/button";

interface Props {
  title: string;
  subtitle: string;
  description: string;
  heroImage: string;
}

const { title, subtitle, description, heroImage } = Astro.props;
---

<BaseLayout title={`${title} | WRP Dubai - Premium Car Detailing`} description={description}>
  <!-- Hero Section -->
  <section class="relative h-[70vh] flex items-center justify-center overflow-hidden">
    <img src={heroImage} alt={title} class="absolute inset-0 w-full h-full object-cover" />
    <div class="absolute inset-0 bg-black/50"></div>
    <div class="relative z-10 text-center text-white px-6">
      <p class="text-sm tracking-[0.3em] mb-4 font-mono uppercase">{subtitle}</p>
      <h1 class="font-serif text-5xl md:text-7xl font-bold mb-6">{title}</h1>
      <p class="text-xl max-w-2xl mx-auto text-white/90">{description}</p>
    </div>
  </section>

  <!-- Page Content -->
  <slot />

  <!-- CTA Section -->
  <section class="py-20 px-6 bg-primary text-primary-foreground text-center">
    <div class="container mx-auto max-w-3xl">
      <h2 class="font-serif text-4xl font-bold mb-6">Ready to Protect Your Investment?</h2>
      <p class="text-xl mb-8 opacity-90">Contact us today for a free consultation and quote</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" className="bg-background text-foreground hover:bg-background/90">
          <a href="tel:+971547173000">Call +971 54 717 3000</a>
        </Button>
        <Button size="lg" variant="outline" className="border-primary-foreground text-primary-foreground hover:bg-primary-foreground hover:text-primary">
          <a href="/contact-us">Get a Quote</a>
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
